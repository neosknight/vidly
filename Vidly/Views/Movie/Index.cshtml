@model Vidly.ViewModels.MoviesViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<br />
<br />
@Html.ActionLink("Add Movie", "New", "Movie", new { @class = "btn btn-primary" })

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Movie Name</th>
            <th>Genre</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name, "Details", "Movie", new { id = movie.Id }, null)</td>
                <td>@movie.Genre.Name</td>
                <td>@Html.ActionLink("Edit", "Edit", "Movie", new { id = movie.Id }, null)</td>
            </tr>
        }
    </tbody>
</table>